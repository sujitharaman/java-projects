<?xml version="1.0"?>

-<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0">

<modelVersion>4.0.0</modelVersion>

<groupId>com.infosys</groupId>

<artifactId>java-project</artifactId>

<packaging>jar</packaging>

<version>1.0-SNAPSHOT</version>

<name>java-project</name>

<url>http://maven.apache.org</url>
<distributionManagement>
        <repository>
            <id>internalMavenReleaseRepository</id>
            <name>Internal Maven Release Repository</name>
            <url>${releases.distribution.url}</url>
         </repository>
         <snapshotRepository>
            <id>internalMavenSnapshotRepository</id>
            <name>Internal Snapshots Repository</name>
            <url>${snapshots.distribution.url}</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
  </distributionManagement>
  
  <properties>
     <repository.server.root>http://localhost:8081/repository</repository.server.root>
     <releases.distribution.url>
        ${repository.server.root}/test-releases/
     </releases.distribution.url>
     <snapshots.distribution.url>
        ${repository.server.root}/test-snapshots/
     </snapshots.distribution.url>

  </properties>


-<dependencies>


-<dependency>

<groupId>junit</groupId>

<artifactId>junit</artifactId>

<version>3.8.1</version>

<scope>test</scope>

</dependency>

</dependencies>


-<build>


-<plugins>


-<plugin>

<groupId>external.atlassian.jgitflow</groupId>

<artifactId>jgitflow-maven-plugin</artifactId>

<version>1.0-m5.1</version>


-<configuration>

<noDeploy>true</noDeploy>


-<flowInitContext>

<masterBranchName>master</masterBranchName>

<developBranchName>develop</developBranchName>

<featureBranchPrefix>feature/</featureBranchPrefix>

<releaseBranchPrefix>release/</releaseBranchPrefix>

<hotfixBranchPrefix>hotfix/</hotfixBranchPrefix>

</flowInitContext>

<!-- Keep your maven submodules at the same version as the aggregator POM -->


<autoVersionSubmodules>true</autoVersionSubmodules>

<!-- Share feature branches -->


<pushFeatures>true</pushFeatures>

<!-- Create a release branch when a release goal is initiated -->


<pushReleases>true</pushReleases>

<!-- Share maintenance branches -->


<pushHotfixes>true</pushHotfixes>

<!-- Prevents deployments from dev workstations so that they can be done by a CI server -->


<noDeploy>true</noDeploy>

<enableFeatureVersions>true</enableFeatureVersions>

</configuration>

</plugin>


-<plugin>

<groupId>com.spotify</groupId>

<artifactId>docker-maven-plugin</artifactId>

<version>1.0.0</version>


-<configuration>

<imageName>example</imageName>

<dockerDirectory>./src/main/resources/docker</dockerDirectory>

<forceTags>true</forceTags>


-<imageTags>

<imageTag>${project.version}</imageTag>

<imageTag>latest</imageTag>

</imageTags>


-<resources>


-<resource>

<targetPath>/</targetPath>

<directory>${project.build.directory}</directory>

<include>${project.build.finalName}.jar</include>

</resource>

</resources>

</configuration>

</plugin>

</plugins>

</build>

</project>
